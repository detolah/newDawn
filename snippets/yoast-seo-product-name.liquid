{%- liquid
	assign selected_variant = product.selected_variant
	assign current_variant = product.selected_or_first_available_variant
	assign settings_data = shop.metafields.yoast_seo.settings.value | default: shop.metafields.yoast_seo.settings
	assign separator_replacement = settings_data.siteSettings.siteDefaults.separator

	if page_title
		assign product_name = page_title
	else
		assign product_name = current_variant.product.title
	endif
	echo product_name

	if product.variants.size > 1 and selected_variant
		echo " " | append: separator_replacement | append: " " | append: current_variant.title
	endif
-%}
